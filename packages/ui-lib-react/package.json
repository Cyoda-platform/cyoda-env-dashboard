{
  "name": "@cyoda/ui-lib-react",
  "version": "1.0.0",
  "description": "Cyoda UI Library for React - Shared components and utilities",
  "type": "module",
  "main": "./src/index.ts",
  "module": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "import": "./src/index.ts",
      "types": "./src/index.ts"
    },
    "./styles": "./dist/style.css"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "cd ../.. && vitest run --environment jsdom",
    "test:watch": "cd ../.. && vitest --environment jsdom",
    "test:ui": "cd ../.. && vitest --ui --environment jsdom",
    "test:coverage": "cd ../.. && vitest --coverage --environment jsdom",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist node_modules"
  },
  "dependencies": {
    "@ant-design/icons": "^6.1.0",
    "@types/sortablejs": "^1.15.8",
    "antd": "^5.29.3",
    "axios": "^1.7.9",
    "classnames": "^2.5.1",
    "lodash": "^4.17.21",
    "mark.js": "^8.11.1",
    "moment": "^2.30.1",
    "monaco-editor": "^0.54.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^7.9.4",
    "sortablejs": "^1.15.6"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.4.8",
    "@testing-library/react": "^16.0.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/lodash": "^4.17.14",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitejs/plugin-react": "^4.3.1",
    "@vitest/ui": "^3.0.3",
    "eslint": "^9.18.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "happy-dom": "^20.0.2",
    "jsdom": "^27.0.0",
    "sass": "^1.83.4",
    "typescript": "^5.7.3",
    "vite": "^6.0.11",
    "vitest": "^3.0.3"
  },
  "peerDependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  }
}
