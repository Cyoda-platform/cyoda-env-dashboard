{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* Path aliases */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@cyoda/ui-lib-react": ["../../packages/ui-lib-react/src"],
      "@cyoda/http-api-react": ["../../packages/http-api-react/src"],
      "@cyoda/cyoda-sass-react": ["../../packages/cyoda-sass-react/src"],
      "@cyoda/tableau-react": ["../../packages/tableau-react/src"],
      "@cyoda/statemachine-react": ["../../packages/statemachine-react/src"],
      "@cyoda/tasks-react": ["../../packages/tasks-react/src"],
      "@cyoda/processing-manager-react": ["../../packages/processing-manager-react/src"]
    }
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}

