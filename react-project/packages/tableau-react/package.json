{
  "name": "@cyoda/tableau-react",
  "version": "1.0.0",
  "description": "Cyoda Tableau Integration - React Version",
  "type": "module",
  "scripts": {
    "dev": "vite --port 3007",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "cd ../.. && vitest run --environment jsdom packages/tableau-react",
    "test:watch": "cd ../.. && vitest --environment jsdom packages/tableau-react",
    "test:ui": "cd ../.. && vitest --ui --environment jsdom packages/tableau-react",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@cyoda/http-api-react": "1.0.0",
    "@cyoda/ui-lib-react": "1.0.0",
    "@tanstack/react-query": "^5.62.11",
    "antd": "^5.22.6",
    "axios": "^1.7.9",
    "lodash": "^4.17.21",
    "moment": "^2.30.1",
    "prismjs": "^1.30.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.28.1",
    "zustand": "^5.0.2"
  },
  "devDependencies": {
    "@types/lodash": "^4.17.13",
    "@types/node": "^22.10.7",
    "@types/prismjs": "^1.26.5",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@vitejs/plugin-react": "^4.3.4",
    "sass": "^1.83.4",
    "typescript": "^5.7.3",
    "vite": "^6.0.11"
