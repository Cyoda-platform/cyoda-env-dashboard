    "axios": "^1.7.9",
    "element-plus": "^2.9.3",
    "event-source-polyfill": "^1.0.31",
    "mitt": "^3.0.1",
    "portal-vue": "^3.0.0",
    "vue": "^3.5.13",
    "vue-router": "^4.5.0"
  },
  "devDependencies": {
    "@cyoda/cli": "4.0.0-28-SNAPSHOT",
    "@rushstack/eslint-patch": "^1.10.5",
    "@tsconfig/node20": "^20.1.4",
